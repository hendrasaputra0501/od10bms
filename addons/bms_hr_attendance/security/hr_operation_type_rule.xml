<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Global Document Type -->
        <record model="ir.rule" id="hr_operation_type_rule">
            <field name="name">HR Operation Type Rule</field>
            <field name="model_id" search="[('model','=','hr.operation.type')]" model="ir.model"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('user_ids','in',user.id)]</field>
        </record>

        <record model="ir.rule" id="hr_operation_type_minimum_wage_rule">
            <field name="name">Operation Type Wage Rule</field>
            <field name="model_id" search="[('model','=','hr.minimum.wage')]" model="ir.model"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('operation_type_id.user_ids','in',user.id)]</field>
        </record>

        <record model="ir.rule" id="hr_operation_type_attendance_payroll_rule">
            <field name="name">Operation Type HR Payroll Rule</field>
            <field name="model_id" search="[('model','=','hr.attendance.payroll')]" model="ir.model"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('operation_type_id.user_ids','in',user.id)]</field>
        </record>
    </data>
</odoo>
