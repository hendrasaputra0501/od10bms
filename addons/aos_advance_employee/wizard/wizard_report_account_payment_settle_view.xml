<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- ========== Spesifikasi Form Wizard ========== -->
    	<record id="view_wizard_report_account_payment_settle_form" model="ir.ui.view">
        	<field name="name">Report Account Payment Settlement</field>
            <field name="model">wizard.report.account.payment.settle</field>
            <field name="arch" type="xml">
            	<form string="Report Account Payment settlement">
                    <notebook>
						<page string="Basic">
							<group>
								<group>
									<field name="paper_size" required="1"/>
								</group>
								<group>
									<field name="report_type" required="1"/>
								</group>
							</group>
						</page>
                    </notebook>
					<footer>
					    <button name="create_report" string="Print" type="object" class="oe_highlight"/>
					    	or
					    <button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<!-- ========== Spesifikasi Action Wizard ========== -->
        <record id="action_wizard_report_account_payment_settle" model="ir.actions.act_window">
            <field name="name">Report Account Payment settlement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.report.account.payment.settle</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_report_account_payment_settle_form"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <!-- ========== Spesifikasi Report ========== -->
        <report string	= "Report Account Payment settle"
				model	= "wizard.report.account.payment.settle"
				auto	= "True"
				name	= "report_account_payment_settle_a42"
				rml		= "aos_advance_employee/report/report_account_payment_settle_a42.jrxml"
				id		= "report_account_payment_settle_a42"
        />
	</data>
</odoo>

