<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data> 
	
		<record id="mill_lhp_type_tree_view" model="ir.ui.view">
			<field name="name">mill.lhp.type.tree.view</field>
			<field name="model">mill.lhp.type</field>
			<field name="arch" type="xml">
				<tree string="Laporan Harian Produksi Type">
					<field name="name"/>
					<field name="location_id"/>
					<field name="location_dest_id"/>
					<field name="product_tbs_id"/>
					<field name="product_cpo_id"/>
					<field name="product_kernel_id"/>
				</tree>
			</field>
		</record>   
		

		<record id="view_mill_lhp_type_search" model="ir.ui.view">
			<field name="name">mill.lhp.type.search</field>
			<field name="model">mill.lhp.type</field>
			<field name="arch" type="xml">
				<search string="Search Laporan Harian Produksi Type">
					<field name="name"/>
				</search>
			</field>
		</record>

		<record model="ir.ui.view" id="mill_lhp_type_form_view">
			<field name="name">mill.lhp.type.form</field>
			<field name="model">mill.lhp.type</field>
			<field name="arch" type="xml">
				<form string="Laporan Harian Produksi Type">
					<sheet>
						<div class="oe_title">
	                        <label string="Nama" class="oe_edit_only"/>
	                        <h1><field name="name" placeholder="LHP Type" required="1"/></h1>
	                    </div>
						<group>
							<group>
								<field name="product_tbs_id" required="1" options="{'no_create': True, 'no_edit': True}"/>
								<field name="product_cpo_id" required="1" options="{'no_create': True, 'no_edit': True}"/>
								<field name="product_kernel_id" required="1" options="{'no_create': True, 'no_edit': True}"/>
							</group>
							<group>
								<field name="location_id" required="1" options="{'no_create': True, 'no_edit': True}"/>
								<field name="location_dest_id" required="1" options="{'no_create': True, 'no_edit': True}"/>
							</group>
						</group>
					</sheet>            
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_mill_lhp_type">
			<field name="name">Laporan Harian Produksi Type</field>
			<field name="res_model">mill.lhp.type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<menuitem id="lhp_type_menu" name="LHP Type" parent="c10i_palm_oil_mill.config_mills_menu" action="action_mill_lhp_type"/>
	</data>
</odoo>