<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- leasing -->
        <record id="wizard_leasing_form" model="ir.ui.view">
            <field name="name">wizard_leasing_form</field>
            <field name="model">wizard.leasing</field>
            <field name="arch" type="xml">
                <form string="Leasing Procurement">
                    <group string="">
                        <group>
                            <field name="description" required="1" placeholder="ex. Payment for ..."/>
                            <field name="partner_id" readonly="1"/>
                            <field name="journal_id" string="Journal" required="1" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                            <field name="account_id" string="Account" required="1" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                            
                        </group>
                    </group>
                    <footer>
                        <button string="Create Payment" name="create_payment" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_leasing" model="ir.actions.act_window">
            <field name="name">Installment Line</field>
            <field name="res_model">wizard.leasing</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="wizard_leasing_form"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>