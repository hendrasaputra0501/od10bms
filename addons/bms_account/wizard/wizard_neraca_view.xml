<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_neraca_report_form" model="ir.ui.view">
            <field name="name">Wizard Neraca Report</field>
            <field name="model">wizard.neraca.report</field>
            <field name="arch" type="xml">
                <form string="Neraca Report">
                    <p class="oe_grey">
                        Please fill field below.
                    </p>
                    <group>
                        <group>
                            <field name="date_start" required="1"/>
                        </group>
                        <group>
                            <field name="date_end" required="1"/>\
                            <field name="report_type"/>
                            <field name="company_id" options="{'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Referensi Pengelompokan">
                            <group string="Aktiva Lancar">
                                <field name="account_id_kas" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_bank" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_piutang" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_inventory" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_pbd" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_pdd" options="{'no_create':True,'no_create_edit':True}"/>
                                <field name="account_id_um" placeholder="Kode Akun Sebagai Referensi"/>
                            </group>
                            <group string="Aktiva Tetap">
                                <field name="account_id_asset" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_akp" placeholder="Kode Akun Sebagai Referensi"/>
                            </group>
                            <group string="Aktiva Lancar Lainnya">
                                <field name="account_id_atll" placeholder="Kode Akun Sebagai Referensi"/>
                            </group>
                            <group string="Passiva">
                                <field name="account_id_hd" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_hp" placeholder="Kode Akun Sebagai Referensi"/>
                            </group>
                            <group string="Hutang Jangka Panjang">
                                <field name="account_id_hps" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_sgujp" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_hki" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_hkoj" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_hbj" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_hko" placeholder="Kode Akun Sebagai Referensi"/>
                            </group>
                            <group string="Modal">
                                <field name="account_id_myd" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_sldt" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_pmd" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_slblj" placeholder="Kode Akun Sebagai Referensi"/>
                                <field name="account_id_sbbi" placeholder="Kode Akun Sebagai Referensi"/>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_neraca_report" model="ir.actions.act_window">
            <field name="name">Neraca Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.neraca.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_neraca_report_form"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <report string  = "Neraca Report"
                model   = "wizard.neraca.report"
                auto    = "True"
                report_type = "xlsx"
                name    = "report_neraca_xlsx"
                id      = "report_neraca_xlsx"
                menu    = "True"
        />

      <menuitem id="menu_neraca_report_bms"
          name="Neraca "
          action="action_wizard_neraca_report"
          parent="account.menu_finance_legal_statement"
          icon="fa-print"
          sequence="20"/>
          
    </data>
</odoo>