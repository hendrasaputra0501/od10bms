<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="tax_payment_line_tree">
            <field name="name">tax.payment.line.tree</field>
            <field name="model">tax.payment.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tax_payment_id"/>
                    <field name="account_id"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="tax_payment_line_form">
            <field name="name">tax.payment.line.form</field>
            <field name="model">tax.payment.line</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="tax_payment_id"/>
                                <field name="account_id"/>
                                <field name="amount"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tax_payment_line_action">
            <field name="name">Tax Payment Line</field>
            <field name="res_model">tax.payment.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem 
            id="submenu_tax_payment_line"
            name="Tax Payment Line"
            parent="main_tax_payment"

            action="tax_payment_line_action"
        /> -->

    </data>
</odoo>