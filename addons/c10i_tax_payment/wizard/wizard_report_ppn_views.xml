<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="wizard_report_ppn">
        <field name="name">Laporan PPN Masukan-Keluaran</field>
        <field name="model">wizard.report.ppn</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="account_group"/>
                    <field name="partner_ids" widget="many2many_tags" options="{'no_create': True}" domain="[('|'),('supplier', '=', True),('customer', '=', True)]"/>
                    <field name="account_ids" widget="many2many_tags"/>
                </group>
                <group col="4">
                    <field name="date_from" />
                    <field name="date_to" />
                </group>
                <footer>
                    <button name="print_report" string="Excel" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_wizard_report_ppn" model="ir.actions.act_window">
        <field name="name">Laporan PPN Masukan-Keluaran</field>
        <field name="res_model">wizard.report.ppn</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="wizard_report_ppn"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_wizard_report_ppn" parent="account.menu_finance_legal_statement" sequence="5" action="action_wizard_report_ppn" name="Laporan PPN Masukan-Keluaran"/>

    <report
        id="report_ppn_xlsx"
        model="account.move.line"
        string="Laporan PPN Masukan-Keluaran"
        report_type="xlsx"
        name="c10i_tax_payment.report_ppn_xlsx"
        file="c10i_tax_payment.report_ppn_xlsx"
    />
</odoo>