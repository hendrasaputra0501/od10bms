<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_weighbridge_product_product_form" model="ir.ui.view">
        <field name="name">view.weighbridge.product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='notes']" position="after">
                <page name="weighbridge_config" string="Weighbridge Config">
                    <group>
                        <group>
                            <field name="sync_to_weighbridge_server" />
                        </group>
                        <group></group>
                    </group>
                    <field name="synced_weighbridge_server_ids" attrs="{'invisible': ['|', ('sync_to_weighbridge_server', '=', False), ('synced_weighbridge_server_ids', '=', [])]}" readonly="1">
                        <tree>
                            <field name="name" />
                            <field name="synced" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>