<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard -->
        <record model='ir.ui.view' id='wizard_report_du_all_select_form'>
            <field name="name">Laporan Daftar Upah</field>
            <field name="model">wizard.report.du.all.select</field>
            <field name="arch" type="xml">
                <form string="Daftar Upah">
                    <center><h1>Laporan Daftar Upah</h1></center>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="report_type" string="type" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Kemandoran">
                            <group>
                                <field name="hr_foreman_id" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Tipe Karyawan">
                            <group>
                                <field name="employee_type_id" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button name="create_report" type="object" default_focus="1" string="Print" class="oe_highlight" icon="fa-get-pocket"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" icon="fa-ban"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='wizard_report_du_all_select_action'>
            <field name="name">Print Daftar Upah </field>
            <field name="res_model">wizard.report.du.all.select</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_report_du_all_select_form"/>
            <field name="target">new</field>
        </record>

        <!-- Reporting -->
        <report string	= "Daftar Upah"
				model	= "wizard.report.du.all.select"
				auto	= "True"
				name	= "report_du_all"
				rml		= "c10i_lhm/report/report_du_all.jrxml"
				id		= "report_du_all"
        />

        <report string	= "Daftar Upah - Kemandoran"
				model	= "wizard.report.du.all.select"
				auto	= "True"
				name	= "report_du_kemandoran"
				rml		= "c10i_lhm/report/report_du_kemandoran.jrxml"
				id		= "report_du_kemandoran"
        />

        <report string	= "Slip Gaji"
				model	= "wizard.report.du.all.select"
				auto	= "True"
				name	= "report_du_slip_gaji"
				rml		= "c10i_lhm/report/report_du_slip_gaji.jrxml"
				id		= "report_du_slip_gaji"
        />

        <report string	= "Tanda Terima Gaji"
				model	= "wizard.report.du.all.select"
				auto	= "True"
				name	= "report_du_tanda_terima"
				rml		= "c10i_lhm/report/report_du_tanda_terima.jrxml"
				id		= "report_du_tanda_terima"
        />

        <!-- Plantation Salary_ -->
        <record id="view_plantation_salary_form" model="ir.ui.view">
            <field name="name">view.plantation.salary.form</field>
            <field name="model">plantation.salary</field>
            <field name="arch" type="xml">
                <form string="Laporan Daftar Upah">
                    <header>
                        <button name="button_draft" states="cancel,confirmed" string="Set Draft" type="object" class="btn-default"/>
                        <button icon="fa-get-pocket" name="generate_data_upah" string="Regenerate Data" type="object" states="confirmed"/>
                        <button name="%(action_lhm_salary_bill)d" states="confirmed" string="Create Payroll Entry" type="action" class="btn-default btn-primary" />
                        <button name="button_confirm" states="draft" string="Confirm" type="object" class="btn-default btn-primary"/>
                        <button name="button_cancel" states="confirmed" string="Cancel" type="object" class="btn-default"/>
                        <button icon="fa-print" name="%(wizard_report_du_all_select_action)d" string="Print" type="action" target="new"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,cancel,confirmed,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label string="Nama" class="oe_edit_only"/>
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group name="plantation_salary">
                            <group>
                                <field name="period_id"/>
                                <label string="Periode Laporan"/>
                                <div>
                                    <field name="from_date" class="oe_inline" nolabel="1" required="1"/> -
                                    <field name="to_date" nolabel="1" class="oe_inline" required="1"/>
                                </div>
                            </group>
                            <group>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tunjangan dan Potongan" group="base.group_no_one">
                                <field name="allowance_ids" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="no_induk"/>
                                        <field name="employee_id"/>
                                        <field name="tunjangan_cuti" sum="tunjangan_cuti" invisible="1"/>
                                        <field name="kompensasi_cuti" sum="kompensasi_cuti" invisible="1"/>
                                        <field name="potongan_lain" sum="potongan_lain"/>
                                        <field name="tunjangan_lain" sum="tunjangan_lain"/>
                                        <field name="subsidi_kendaraan" sum="subsidi_kendaraan" invisible="1"/>
                                        <field name="koperasi" sum="koperasi"/>
                                        <field name="rapel" sum="rapel"/>
                                        <field name="pph21" sum="pph21" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Natura" group="base.group_no_one">
                                <field name="natura_ids" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="no_induk"/>
                                        <field name="employee_id"/>
                                        <field name="employee_type_id"/>
                                        <field name="ptkp_id"/>
                                        <field name="natura_rp" sum="natura_rp"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="BPJS" group="base.group_no_one">
                                <field name="bpjs_ids" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="no_induk"/>
                                        <field name="employee_id"/>
                                        <field name="employee_type_id"/>
                                        <field name="bpjs_tk_id"/>
                                        <field name="bpjs_tk_tunj" sum="bpjs_tk_tunj"/>
                                        <field name="bpjs_tk_pot" sum="bpjs_tk_pot"/>
                                        <field name="bpjs_tk_setor" sum="bpjs_tk_setor"/>
                                        <field name="bpjs_pensiun_id"/>
                                        <field name="bpjs_pensiun_tunj" sum="bpjs_pensiun_tunj"/>
                                        <field name="bpjs_pensiun_pot" sum="bpjs_pensiun_pot"/>
                                        <field name="bpjs_pensiun_setor" sum="bpjs_pensiun_setor"/>
                                        <field name="bpjs_kesehatan_id"/>
                                        <field name="bpjs_kesehatan_tunj" sum="bpjs_kesehatan_tunj"/>
                                        <field name="bpjs_kesehatan_pot" sum="bpjs_kesehatan_pot"/>
                                        <field name="bpjs_kesehatan_setor" sum="bpjs_kesehatan_setor"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Daftar Upah">
                                <field name="upah_ids" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="kemandoran_id"/>
                                        <field name="no_induk"/>
                                        <field name="employee_id"/>
                                        <field name="ptkp_id" invisible="1"/>
                                        <field name="employee_type_id"/>
                                        <field name="division_id" invisible="1"/>
                                        <field name="hke" sum="hke" invisible="1"/>
                                        <field name="hkne" sum="hkne" invisible="1"/>
                                        <field name="total_hk" sum="total_hk" invisible="1"/>
                                        <field name="hke_rp" sum="hke_rp" invisible="1"/>
                                        <field name="hkne_rp" sum="hkne_rp" invisible="1"/>
                                        <field name="total_hk_rp" sum="total_hk_rp" invisible="1"/>
                                        <field name="basic_salary" sum="basic_salary" invisible="0"/>
                                        <field name="premi_lembur" sum="premi_lembur" invisible="0"/>
                                        <field name="natura" sum="natura" invisible="0"/>
                                        <field name="rapel" sum="rapel" invisible="0"/>
                                        <field name="tunjangan_lain" sum="tunjangan_lain" invisible="1"/>
                                        <field name="tunj_bpjs_pensiun" sum="tunj_bpjs_pensiun" invisible="1"/>
                                        <field name="tunj_bpjs_kesehatan" sum="tunj_bpjs_kesehatan" invisible="1"/>
                                        <field name="tunj_bpjs_tk" sum="tunj_bpjs_tk" invisible="1"/>
                                        <field name="tunj_lebih_hari" sum="tunj_lebih_hari" invisible="1"/>
                                        <field name="gaji_bruto" sum="gaji_bruto" invisible="0"/>
                                        <field name="pot_bpjs_pensiun" sum="pot_bpjs_pensiun" invisible="0"/>
                                        <field name="pot_bpjs_kesehatan" sum="pot_bpjs_kesehatan" invisible="0"/>
                                        <field name="pot_bpjs_tk" sum="pot_bpjs_tk" invisible="0"/>
                                        <field name="pot_lain" sum="pot_lain" invisible="0"/>
                                        <field name="koperasi" sum="koperasi" invisible="0"/>
                                        <field name="pot_kurang_hari" sum="pot_kurang_hari" invisible="1"/>
                                        <field name="pph_21" sum="pph_21" invisible="1"/>
                                        <field name="total_potongan" sum="total_potongan" invisible="0"/>
                                        <field name="total_tunjangan" sum="total_tunjangan" invisible="0"/>
                                        <field name="upah_diterima" sum="upah_diterima"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Payrol Invoice" attrs="{'invisible': [('invoice_ids','=',[])]}">
                                <field name='invoice_ids' context="{'tree_view_ref': 'account.action_invoice_tree2'}" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_plantation_salary_tree" model="ir.ui.view">
            <field name="name">view.plantation.salary.tree</field>
            <field name="model">plantation.salary</field>
            <field name="arch" type="xml">
                <tree string="Laporan Daftar Upah">
                    <field name="name"/>
                    <field name="period_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_plantation_salary_filter" model="ir.ui.view">
            <field name="name">view_plantation.salary.filter</field>
            <field name="model">plantation.salary</field>
            <field name="arch" type="xml">
                <search string="Daftar Upah">
                    <group expand="0" string="Group By">
                        <filter string="Periode" domain="[]" context="{'group_by':'period_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_plantation_salary_action" model="ir.actions.act_window">
            <field name="name">Daftar Upah</field>
            <field name="res_model">plantation.salary</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_plantation_salary_filter"/>
            <field name="domain">[]</field>
            <field name="context">{'readonly_by_pass': ['period_id']}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Klik untuk menambahkan Laporan Daftar Upah.
              </p>
            </field>
        </record>

        <!-- <menuitem id="submenu_proses_penggajian" name="Proses Penggajian" parent="menu_lhm_transaction" groups="group_plantation_manager" sequence="40"/> -->
        <menuitem id="submenu_proses_penggajian" name="Proses Penggajian" parent="menu_lhm_transaction" sequence="40"/>
        <menuitem id="submenu_daftar_upah" name="Daftar Upah" action="view_plantation_salary_action" parent="menu_plantation_report" groups="group_plantation_manager" sequence="60"/>
        <!-- End of Report DU -->

        
        <!--Plantation Allowance Type -->
        <record id="view_plantation_allowance_type_form" model="ir.ui.view">
            <field name="name">view.plantation.allowance.type.form</field>
            <field name="model">plantation.allowance.type</field>
            <field name="arch" type="xml">
                <form string="Potongan">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_button_box" name="button_box"/>
                        <div class="oe_title">
                            <label string="Nama" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Potongan" required="1"/></h1>
                        </div>
                        <group name="potongan">
                            <group>
                                <field name="code" string="Kode" required="1"/>
                                <field name="account_id"/>
                                <field name="create_invoice" />
                                <field name="default_partner_id" attrs="{'invisible': [('create_invoice','=',False)], 'required': [('create_invoice','=',True)]}"/>
                            </group>
                            <group>
                                <field name="company_id" readonly="1"/>
                            </group>
                            <group string="Tunjangan">
                                <field name="tunjangan"/>
                                <field name="rapel"/>
                            </group>
                            <group string="Potongan">
                                <field name="potongan"/>
                                <field name="koperasi"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_plantation_allowance_type_tree" model="ir.ui.view">
            <field name="name">view.plantation.allowance.type.tree</field>
            <field name="model">plantation.allowance.type</field>
            <field name="arch" type="xml">
                <tree string="Potongan">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="account_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_plantation_allowance_type_filter" model="ir.ui.view">
            <field name="name">view.plantation.allowance.type.filter</field>
            <field name="model">plantation.allowance.type</field>
            <field name="arch" type="xml">
                <search string="Potongan">
                    <field name="name" string="Potongan" filter_domain="['|',('code','ilike',self),('name','ilike',self)]"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('active','=',True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_plantation_allowance_type" model="ir.actions.act_window">
            <field name="name">Potongan</field>
            <field name="res_model">plantation.allowance.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_plantation_allowance_type_filter"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Klik untuk menambahkan Tipe Potongan.
              </p>
            </field>
        </record>
        <menuitem id="menu_plantation_allowance_type_config" name="Tipe Potongan/Tunjangan" action="action_plantation_allowance_type" parent="menu_lhm_karyawan" groups="group_plantation_manager" sequence="75"/>
        <!--End Of Plantation Allowance Type -->

        <!--Plantation Allowance Other -->
        <record id="view_plantation_allowance_other_form" model="ir.ui.view">
            <field name="name">view.plantation.allowance.other.form</field>
            <field name="model">plantation.allowance.other</field>
            <field name="priority">18</field>
            <field name="arch" type="xml">
                <form string="Potongan">
                    <header>
                        <button name="button_draft" states="cancel,confirmed" string="Set Draft" type="object" class="btn-default"/>
                        <button name="button_confirm" states="draft" string="Confirm" type="object" class="btn-default btn-primary"/>
                        <button name="button_cancel" states="confirmed" string="Cancel" type="object" class="btn-default"/>
                        <button name="import_excel" states="draft" type="object" string="Import" icon="fa-archive text-primary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,cancel,confirmed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label string="No. Dok" class="oe_edit_only"/>
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group name="potongan">
                            <group>
                                <field name="allowance_type_id" required="1" domain="[('potongan','=',True)]" options="{'no_create_edit':True, 'no_create':True, 'no_open':True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="date" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="account_period_id" required="1" options="{'no_create_edit':True, 'no_create':True, 'no_open':True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="reference" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field widget="binary" name="image" filename="image_filename" placeholder="Choose XLS file" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="image_filename" invisible="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail Potongan">
                                <field name="allowance_ids" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="employee_id" options="{'no_create_edit':True, 'no_create':True, 'no_open':True}"/>
                                        <field name="no_induk"/>
                                        <field name="note"/>
                                        <field name="amount" sum="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_plantation_allowance_other_tree" model="ir.ui.view">
            <field name="name">view.plantation.allowance.other.tree</field>
            <field name="model">plantation.allowance.other</field>
            <field name="arch" type="xml">
                <tree string="Potongan Lainnya">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="reference"/>
                    <field name="account_period_id"/>
                    <field name="allowance_type_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_plantation_allowance_other_filter" model="ir.ui.view">
            <field name="name">view.plantation.allowance.other.filter</field>
            <field name="model">plantation.allowance.other</field>
            <field name="arch" type="xml">
                <search string="Potongan Lainnya">
                    <field name="name" string="Potongan" filter_domain="['|',('code','ilike',self),('name','ilike',self)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_plantation_allowance_other" model="ir.actions.act_window">
            <field name="name">Potongan Lainnya</field>
            <field name="res_model">plantation.allowance.other</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_plantation_allowance_other_filter"/>
            <field name="context">{}</field>
            <field name="domain">[('potongan','=',True)]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Klik untuk menambahkan Potongan Lainnya.
              </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="action_plantation_allowance_other_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_plantation_allowance_other_tree"/>
            <field name="act_window_id" ref="action_plantation_allowance_other"/>
        </record>
        <record model="ir.actions.act_window.view" id="action_plantation_allowance_other_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_plantation_allowance_other_form"/>
            <field name="act_window_id" ref="action_plantation_allowance_other"/>
        </record>
        <menuitem id="menu_plantation_allowance_other" name="Potongan Lainnya" action="action_plantation_allowance_other" parent="submenu_proses_penggajian" groups="group_plantation_manager" sequence="20"/>
        <!--End Of Plantation Allowance Other -->

        <!--Plantation Allowance Tunjangan -->
        <record id="view_plantation_allowance_tunjangan_form" model="ir.ui.view">
            <field name="name">view.plantation.allowance.tunjangan.form</field>
            <field name="model">plantation.allowance.other</field>
            <field name="arch" type="xml">
                <form string="Tunjangan">
                    <header>
                        <button name="button_draft" states="cancel,confirmed" string="Set Draft" type="object" class="btn-default"/>
                        <button name="button_confirm" states="draft" string="Confirm" type="object" class="btn-default btn-primary"/>
                        <button name="button_cancel" states="confirmed" string="Cancel" type="object" class="btn-default"/>
                        <button name="import_excel" states="draft" type="object" string="Import" icon="fa-archive text-primary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,cancel,confirmed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label string="No. Dok" class="oe_edit_only"/>
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group name="tunjangan">
                            <group>
                                <field name="allowance_type_id" required="1" domain="[('tunjangan','=',True)]" options="{'no_create_edit':True, 'no_create':True, 'no_open':True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="date" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="account_period_id" required="1" options="{'no_create_edit':True, 'no_create':True, 'no_open':True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="reference" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field widget="binary" name="image" filename="image_filename" placeholder="Choose XLS file" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="image_filename" invisible="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail Tunjangan">
                                <field name="allowance_ids" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="employee_id" options="{'no_create_edit':True, 'no_create':True, 'no_open':True}"/>
                                        <field name="no_induk"/>
                                        <field name="note"/>
                                        <field name="amount" sum="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
