<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem id="menu_manual_import_weighbridge_scale" parent="menu_data_weighbridge_scale" name="Manual Import" sequence="21"/>
        <!--Manual Import-->
        <record id="view_weighbridge_import_data_form" model="ir.ui.view">
            <field name="name">view.weighbridge.import.data.form</field>
            <field name="model">weighbridge.import.data</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Manual Import">
                    <header>
                        <button name="import_manual" type="object" states="draft" string="Import" icon="fa-archive text-primary"/>
                        <button name="set_to_draft" type="object" states="imported,confirm" string="Re-New" icon="fa-check-circle"/>
                        <button name="confirm" type="object" states="imported" string="Confirm" icon="fa-check-circle"/>
                        <button name="import_manual" type="object" states="imported,confirm" string="Re-Import" icon="fa-archive text-primary"/>
                        <button name="create_pickings" type="object" states="confirm" string="Create Pickings" icon="fa-check-circle"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,imported,confirm,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label string="Nama" class="oe_edit_only"/>
                            <h3><field name="name" /></h3>
                        </div>
                        <group name="weighbridge_import_data">
                            <group>
                                <field name="create_date" />
                                <field widget="binary" name="book" filename="book_filename" placeholder="Upload XLS file..."/>
                                <field name="book_filename" invisible="1"/>
                            </group>
                            <group>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': [('error_note','=',False)]}" string="Error Log">
                            <field name="error_note" readonly="1" nolabel="1" style="color:red ! important;"/>
                        </group>
                        <notebook>
                            <page name="general" string="Details">
                                <field name="line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="type"/>
                                        <field name="no_timbang"/>
                                        <field name="no_pol"/>
                                        <field name="partner"/>
                                        <field name="kontrak"/>
                                        <field name="bruto"/>
                                        <field name="tarra"/>
                                        <field name="netto"/>
                                        <field name="sortasi"/>
                                        <field name="date"/>
                                        <field name="transporter"/>
                                        <field name="product"/>
                                        <field name="note"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="no_timbang"/>
                                                <field name="no_pol"/>
                                            </group>
                                            <group>
                                                <field name="date"/>
                                                <field name="type"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Information">
                                                <group>
                                                    <group string="Product">
                                                        <field name="product"/>
                                                        <field name="partner"/>
                                                        <field name="kontrak"/>
                                                        <field name="transporter"/>
                                                        <field name="note"/>
                                                    </group>
                                                    <group string="Hasil Timbangan">
                                                        <field name="bruto"/>
                                                        <field name="tarra"/>
                                                        <field name="netto"/>
                                                        <field name="sortasi"/>
                                                    </group>
                                                </group>
                                            </page>
                                        </notebook>
                                    </form>
                                </field>
                            </page>
                            <page name="pickings" string="Pickings" attrs="{'invisible': [('picking_ids','=',[])]}">
                                <!-- <field name="picking_ids" readonly="1" >
                                    <tree>
                                        <field name="name" />
                                        <field name="partner_id" />
                                        <field name="tiket_timbang" />
                                        <field name="date_done" />
                                        <field name="state" />
                                    </tree>
                                </field> -->
                                <field name="picking_ids" readonly="1" />
                            </page>
                        </notebook>
                        <field name="note" nolabel="1" colspan="4" placeholder="Write note here..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_weighbridge_import_data_tree" model="ir.ui.view">
            <field name="name">view.weighbridge.import.data.tree</field>
            <field name="model">weighbridge.import.data</field>
            <field name="arch" type="xml">
                <tree string="Manual Import">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_weighbridge_import_data_filter" model="ir.ui.view">
            <field name="name">view.weighbridge.import.data.filter</field>
            <field name="model">weighbridge.import.data</field>
            <field name="arch" type="xml">
                <search string="Manual Import">
                    <field name="name"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_weighbridge_import_data" model="ir.actions.act_window">
            <field name="name">Manual Import</field>
            <field name="res_model">weighbridge.import.data</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_weighbridge_import_data_filter"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to Add Manual Import.
              </p>
            </field>
        </record>
        <menuitem id="menu_weighbridge_import_data" action="action_weighbridge_import_data" parent="menu_manual_import_weighbridge_scale" sequence="10"/>
        <!--End Of Manual Import-->
    </data>
</odoo>