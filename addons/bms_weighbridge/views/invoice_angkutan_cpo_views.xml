<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ##################### TIMBANG METRO ###################### -->
    <record id="view_invoice_angkut_cpo_form" model="ir.ui.view">
        <field name="name">view.invoice.angkut.cpo.form</field>
        <field name="model">invoice.angkut.cpo</field>
        <field name="arch" type="xml">
            <form string="Invoice Angkut CPO" >
                <header>
                    <button name="button_generate_pricelist" type="object" string="Generate Pricelist" states="draft" class="oe_highlight"/>
                    <button name="set_draft" type="object" string="Set to Draft" states="price_allocation" />
                    <button name="button_generate_lines" type="object" string="Allocate Price" states="price_allocation" class="oe_highlight"/>
                    <button name="button_confirm" type="object" string="Confirm" states="price_allocation" class="oe_highlight"/>
                    <button name="action_create_bills" type="object" string="Create Bills" states="confirmed" class="oe_highlight"/>
                    <button name="button_cancel" type="object" string="Cancel" states="invoiced" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object"  name="action_view_invoice"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o" attrs="{'invisible':[('state', '!=', 'invoiced'),('invoice_ids','=',[])]}">
                            <field name="invoice_count" widget="statinfo" string="Vendor Bills"/>
                            <field name='invoice_ids' invisible="1"/>
                        </button>
                        <button type="object"  name="action_view_advance"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o" attrs="{'invisible':[('state', '!=', 'invoiced'),('invoice_ids','=',[])]}">
                            <field name="advance_count" widget="statinfo" string="Advance Bills"/>
                            <field name='advance_ids' invisible="1"/>
                        </button>
                    </div>
                    <!--<div class="oe_title">-->
                        <!--<label string="Nama" class="oe_edit_only"/>-->
                        <!--<h1><field name="name" placeholder="Pabrik" required="1" readonly="1"/></h1>-->
                    <!--</div>-->
                    <group name="main_info">
                        <group>
                            <field name="date_start" />
                            <field name="date_stop" />
                            <field name="partner_id" domain="[('supplier','=',True)]" options="{'no_create': True, 'no_open': True}" string="Vendor"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="product_id" attrs="{'invisible': [('state','!=','confirmed')], 'required': [('state','=','confirmed')]}" options="{'no_create': True}" />
                            <field name="journal_id" attrs="{'invisible': [('state','!=','confirmed')], 'required': [('state','=','confirmed')]}" options="{'no_create': True}" />
                            <field name="currency_id" attrs="{'invisible': [('state','!=','confirmed')], 'required': [('state','=','confirmed')]}" options="{'no_create': True}" />
                            <field name="date_invoice" attrs="{'invisible': [('state','!=','confirmed')], 'required': [('state','=','confirmed')]}" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Detail Invoice" name="detail_invoice" attrs="{'invisible': [('invoice_line_ids','=',[])]}">
                            <field name="invoice_line_ids" >
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="name" />
                                    <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="qty_bruto" readonly="1" sum="qty_bruto"/>
                                    <field name="qty_sortasi" readonly="1" sum="qty_sortasi"/>
                                    <field name="qty_netto" sum="qty_netto" readonly="1"/>
                                    <field name="quantity" sum="quantity"/>
                                    <field name="price_unit" />
                                    <field name="price_subtotal" sum="price_subtotal"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ongkos Angkut CPO" name="detail_pricelist">
                            <field name="invoice_ongkir_cpo_ids" >
                                <tree editable="bottom" >
                                    <field name="name" />
                                    <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="tujuan"/>
                                    <field name="price_unit" />
                                </tree>
                            </field>
                        </page>
                        <page string="Timbangan" name="detail_weighbridge">
                            <field name="weighbridge_ids" readonly="1">
                                <tree limit="10">
                                    <field name="TIMBANG_NO" />
                                    <field name="TIMBANG_RELASI" />
                                    <field name="TIMBANG_IN_DATE" />
                                    <field name="TIMBANG_OUT_DATE" />
                                    <field name="TIMBANG_PRODUK" />
                                    <field name="TIMBANG_BERATNETTO" />
                                    <field name="TIMBANG_SORTASI" />
                                    <field name="TIMBANG_POTONGAN" />
                                    <field name="TIMBANG_TOTALBERAT" />
                                    <field name="state" invisible="1" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_invoice_angkut_cpo_tree" model="ir.ui.view">
        <field name="name">view.invoice.tbs.tree</field>
        <field name="model">invoice.angkut.cpo</field>
        <field name="arch" type="xml">
            <tree string="Invoice" >
                <field name='date_start'  />
                <field name='date_stop' />
                <field name='state' />
                <field name="partner_id" />
            </tree>
        </field>
    </record>

    <record id="view_invoice_angkut_cpo_filter" model="ir.ui.view">
        <field name="name">view.invoice.tbs.filter</field>
        <field name="model">invoice.angkut.cpo</field>
        <field name="arch" type="xml">
            <search string="Invoice Angkut CPO">
                <!-- <field name="name" string="Search" filter_domain="['|','|',('TIMBANG_NO','ilike',self),('TIMBANG_RELASI','ilike',self),('TIMBANG_KONTRAK','ilike',self)]"/> -->
                <!-- <separator/> -->
                <field name="partner_id" string="Vendor" />
                <group expand="0" string="Group By">
                    <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_invoice_angkut_cpo" model="ir.actions.act_window">
        <field name="name">Invoice Angkut CPO</field>
        <field name="res_model">invoice.angkut.cpo</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_invoice_angkut_cpo_filter"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Start Creating Invoice TBS
          </p>
        </field>
    </record>

    <menuitem id="menu_invoice_angkut_cpo" parent="account.menu_finance_payables" action="action_invoice_angkut_cpo" sequence="1"/>

</odoo>