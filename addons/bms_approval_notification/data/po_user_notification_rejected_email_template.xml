<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="po_user_notification_rejected_email_template" model="mail.template">
            <field name="name">PO User Approval (Rejected) Notification - Send by Email</field>
            <field name="model_id" ref="bms_approval_notification.model_purchase_order"/>
            <field name="email_from">admin@bumimajusawit.co.id</field>
            <field name="email_to">${ctx.get('to')}</field>
            <field name="subject">Approval Notification - Purchase Order ${object.name or 'n/a'}</field>
            <field name="body_html"><![CDATA[
                <p>PO <strong>${object.name}</strong> Rp. ${'{0:,.2f}'.format(object.amount_total)} tidak disetujui.</p>
                ]]></field>
        </record>
    </data>
</odoo>
